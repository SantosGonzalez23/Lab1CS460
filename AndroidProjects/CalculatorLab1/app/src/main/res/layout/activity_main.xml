<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/solution_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="49677950"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="32dp"
        app:layout_constraintBottom_toTopOf="@id/result_tv"/>

    <TextView
        android:id="@+id/result_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Gonzalez"
        android:textColor="@color/black"
        android:textSize="45dp"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toTopOf="@id/button_layout"/>


    
  <LinearLayout
      android:id="@+id/button_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent">

      <LinearLayout
          android:gravity="center"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <com.google.android.material.button.MaterialButton
              android:id="@+id/button_c"
              android:layout_width="72dp"
              android:layout_height="72dp"
              android:layout_margin="15dp"
              android:text="@string/c"
              android:textColor="@color/white"
              android:textSize="32dp"
              app:cornerRadius="36dp"
              android:backgroundTint="#337DFF"/>

          <com.google.android.material.button.MaterialButton
              android:id="@+id/button_leftbrack"
              android:layout_width="72dp"
              android:layout_height="72dp"
              android:layout_margin="15dp"
              android:text="("
              android:textColor="@color/white"
              android:textSize="32dp"
              app:cornerRadius="36dp"
              android:backgroundTint="#8D8F93"/>

          <com.google.android.material.button.MaterialButton
              android:id="@+id/button_rightbrack"
              android:layout_width="72dp"
              android:layout_height="72dp"
              android:layout_margin="15dp"
              android:text=" )"
              android:textColor="@color/white"
              android:textSize="32dp"
              app:cornerRadius="36dp"
              android:backgroundTint="#FF8D8F93"/>

          <com.google.android.material.button.MaterialButton
              android:id="@+id/button_div"
              android:layout_width="72dp"
              android:layout_height="72dp"
              android:layout_margin="15dp"
              android:text="/"
              android:textColor="@color/white"
              android:textSize="32dp"
              app:cornerRadius="36dp"
              android:backgroundTint="#FFFF9800"/>


      </LinearLayout>


      <LinearLayout
          android:gravity="center"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <com.google.android.material.button.MaterialButton
              android:id="@+id/button_7"
              android:layout_width="72dp"
              android:layout_height="72dp"
              android:layout_margin="15dp"
              android:text="7"
              android:textColor="@color/white"
              android:textSize="32dp"
              app:cornerRadius="36dp"
              android:backgroundTint="#FF8D8F93"/>

          <com.google.android.material.button.MaterialButton
              android:id="@+id/button_8"
              android:layout_width="72dp"
              android:layout_height="72dp"
              android:layout_margin="15dp"
              android:text="8"
              android:textColor="@color/white"
              android:textSize="32dp"
              app:cornerRadius="36dp"
              android:backgroundTint="#FF8D8F93"/>

          <com.google.android.material.button.MaterialButton
              android:id="@+id/button_9"
              android:layout_width="72dp"
              android:layout_height="72dp"
              android:layout_margin="15dp"
              android:text="9"
              android:textColor="@color/white"
              android:textSize="32dp"
              app:cornerRadius="36dp"
              android:backgroundTint="#FF8D8F93"/>

          <com.google.android.material.button.MaterialButton
              android:id="@+id/button_X"
              android:layout_width="72dp"
              android:layout_height="72dp"
              android:layout_margin="15dp"
              android:text="*"
              android:textColor="@color/white"
              android:textSize="32dp"
              app:cornerRadius="36dp"
              android:backgroundTint="#FFFF9800"/>


      </LinearLayout>

      <LinearLayout
          android:gravity="center"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <com.google.android.material.button.MaterialButton
              android:id="@+id/button_4"
              android:layout_width="72dp"
              android:layout_height="72dp"
              android:layout_margin="15dp"
              android:text="4"
              android:textColor="@color/white"
              android:textSize="32dp"
              app:cornerRadius="36dp"
              android:backgroundTint="#FF8D8F93"/>

          <com.google.android.material.button.MaterialButton
              android:id="@+id/button_5"
              android:layout_width="72dp"
              android:layout_height="72dp"
              android:layout_margin="15dp"
              android:text="5"
              android:textColor="@color/white"
              android:textSize="32dp"
              app:cornerRadius="36dp"
              android:backgroundTint="#FF8D8F93"/>

          <com.google.android.material.button.MaterialButton
              android:id="@+id/button_6"
              android:layout_width="72dp"
              android:layout_height="72dp"
              android:layout_margin="15dp"
              android:text="6"
              android:textColor="@color/white"
              android:textSize="32dp"
              app:cornerRadius="36dp"
              android:backgroundTint="#FF8D8F93"/>

          <com.google.android.material.button.MaterialButton
              android:id="@+id/button_plus"
              android:layout_width="72dp"
              android:layout_height="72dp"
              android:layout_margin="15dp"
              android:text="+"
              android:textColor="@color/white"
              android:textSize="32dp"
              app:cornerRadius="36dp"
              android:backgroundTint="#FFFF9800"/>


      </LinearLayout>

      <LinearLayout
          android:gravity="center"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <com.google.android.material.button.MaterialButton
              android:id="@+id/button_1"
              android:layout_width="72dp"
              android:layout_height="72dp"
              android:layout_margin="15dp"
              android:text="1"
              android:textColor="@color/white"
              android:textSize="32dp"
              app:cornerRadius="36dp"
              android:backgroundTint="#FF8D8F93"/>

          <com.google.android.material.button.MaterialButton
              android:id="@+id/button_2"
              android:layout_width="72dp"
              android:layout_height="72dp"
              android:layout_margin="15dp"
              android:text="2"
              android:textColor="@color/white"
              android:textSize="32dp"
              app:cornerRadius="36dp"
              android:backgroundTint="#FF8D8F93"/>

          <com.google.android.material.button.MaterialButton
              android:id="@+id/button_3"
              android:layout_width="72dp"
              android:layout_height="72dp"
              android:layout_margin="15dp"
              android:text="3"
              android:textColor="@color/white"
              android:textSize="32dp"
              app:cornerRadius="36dp"
              android:backgroundTint="#FF8D8F93"/>

          <com.google.android.material.button.MaterialButton
              android:id="@+id/button_minus"
              android:layout_width="72dp"
              android:layout_height="72dp"
              android:layout_margin="15dp"
              android:text="-"
              android:textColor="@color/white"
              android:textSize="32dp"
              app:cornerRadius="36dp"
              android:backgroundTint="#FF9800"/>


      </LinearLayout>

      <LinearLayout
          android:gravity="center"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <com.google.android.material.button.MaterialButton
              android:id="@+id/button_AC"
              android:layout_width="72dp"
              android:layout_height="72dp"
              android:layout_margin="15dp"
              android:text="@string/ac"
              android:textColor="@color/white"
              android:textSize="18dp"
              app:cornerRadius="36dp"
              android:backgroundTint="#FF3377"/>

          <com.google.android.material.button.MaterialButton
              android:id="@+id/button_0"
              android:layout_width="72dp"
              android:layout_height="72dp"
              android:layout_margin="15dp"
              android:text="0"
              android:textColor="@color/white"
              android:textSize="32dp"
              app:cornerRadius="36dp"
              android:backgroundTint="#FF8033"/>

          <com.google.android.material.button.MaterialButton
              android:id="@+id/button_dot"
              android:layout_width="72dp"
              android:layout_height="72dp"
              android:layout_margin="15dp"
              android:text="."
              android:textColor="@color/white"
              android:textSize="32dp"
              app:cornerRadius="36dp"
              android:backgroundTint="#FF8D8F93"/>

          <com.google.android.material.button.MaterialButton
              android:id="@+id/button_equals"
              android:layout_width="72dp"
              android:layout_height="72dp"
              android:layout_margin="15dp"
              android:text="="
              android:textColor="@color/white"
              android:textSize="32dp"
              app:cornerRadius="36dp"
              android:backgroundTint="#FFFF9800"/>


      </LinearLayout>


      
</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>